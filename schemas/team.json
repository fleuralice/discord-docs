{
   "$id": "https://docs.helvetica.moe/schemas/team.json",
   "$schema": "https://json-schema.org/draft/2020-12/schema",
   "type": "object",
   "properties": {
      "icon": {
         "type": ["null", "string"]
      },
      "id": {
         "$ref": "/schemas/snowflake.json"
      },
      "members": {
         "type": "array",
         "items": {
            "type": "object",
            "properties": {
               "membership_state": {
                  "type": "integer",
                  "enum": [1, 2]
               },
               "permissions": {
                  "type": "array",
                  "prefixItems": [{
                     "type": "string",
                     "enum": ["\"*\""]
                  }]
               },
               "team_id": {
                  "$ref": "/schemas/snowflake.json"
               },
               "user": {
                  "$ref": "/schemas/user.json",
                  "required": []
               }
            },
            "required": ["membership_state", "permissions", "team_id", "user"]
         }
      },
      "name": {
         "type": "string"
      },
      "owner_user_id": {
         "$ref": "/schemas/snowflake.json"
      }
   },
   "required": ["icon", "id", "members", "name", "owner_user_id"]
}
