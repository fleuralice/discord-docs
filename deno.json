{
   "fmt": {
      "indentWidth": 3
   },
   "lint": {
      "rules": {
         "tags": ["recommended"]
      }
   },
   "tasks": {
      "lint": "deno fmt --check && deno lint && deno run --check=all --allow-read=schemas/ --allow-net=deno.land scripts/main.ts",
      "build": "deno run --allow-read=schemas/ --allow-write=dist/ --allow-net=deno.land scripts/main.ts --build",
      "dev": "deno run --allow-read=schemas/ --allow-net=deno.land --watch=schemas/ scripts/main.ts",
      "dev:build": "deno run --allow-read=schemas/ --allow-write=dist/ --allow-net=deno.land --watch=schemas/ scripts/main.ts --build"
   },
   "compilerOptions": {
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noUncheckedIndexedAccess": true
   }
}
